
<%= form_for @classificate ,url: classificates_path, :html =>{ :id => "my_form", :style => "margin:0 auto; padding:10% 36%;"} do |f| %>
  <%= f.text_field :id, placeholder:"请输入id,要大于#{ Classificate.last.id }" %> <br/>
  <%= f.text_field :fenlei, placeholder:"请输入新分类的名称" %> <br/>
  <%= f.submit "提交" , class:"btn btn-primary" %>
  <%= link_to "返回", classificates_path, :style => "margin-left:38%;", class: "btn btn-primary"%>
<% end %>

<style>
	input.error { border: 1px solid red; }
	label.error {
	  color: #EA5200;
	}
	label.checked {
	}
</style>

<script>
	$("#my_form").validate({
		rules:{
      "classificate[id]":{
        "required": true,
      // "min":
      },
			"classificate[fenlei]": "required"
		},
		messages:{
			"classificate[id]":"请输入id",
			"classificate[fenlei]":"请输入分类"
		}
	});
</script>
