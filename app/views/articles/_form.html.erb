
<style>
.margin_top{
  margin-top:11px;
}

</style>
<div style="padding:10% 10% 0 10%;">
  <%= form_for @article ,:html =>{:id => "form"} do |f| %>
    <p style="font-weight:bold; font-size:18px;">标题</p>
    <%= f.text_field :title %>
    <p style="font-weight:bold; font-size:18px;">内容</p>
    <%= f.cktext_area :content, :style => "text-indent:2;" %>
    <%= f.file_field :logo   %>
    <!--这里文章需要加上分类标签-->
    <%= f.collection_select "classificate_id",Classificate.all,:id ,:fenlei ,{},{:class =>"margin_top"} %>

    <%= f.submit '提交', :style => "width:40px; height:28px; color:#000; border-radius:6%; border:none; background-color:#a9a9a9;" %>
  <% end %>
</div>


